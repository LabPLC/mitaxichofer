<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/marco" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingTop="20dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="¿Son correctos los datos?"
            android:textColor="@color/generic_amarillo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/marco"
            android:orientation="vertical"
            android:padding="10dp" >

            <TextView
                android:id="@+id/dialogo_datos_correctos_tv_marca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Marca: "
                android:textColor="@color/generic_amarillo" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#000" />

            <TextView
                 android:id="@+id/dialogo_datos_correctos_tv_submarca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submarca: "
                android:textColor="@color/generic_amarillo" />

            <View
                android:layout_width="30dp"
                android:layout_height="2dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="2dp" />

            <TextView
                 android:id="@+id/dialogo_datos_correctos_tv_ano"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Año: "
                android:textColor="@color/generic_amarillo" />

            <View
                android:layout_width="30dp"
                android:layout_height="2dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo de taxi:"
                android:textColor="@color/generic_amarillo" />

           
                <RadioGroup
                    android:id="@+id/dialogo_datos_correctos_radioSonPlacas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right" >

                    <RadioButton
                        android:id="@+id/radioSonPlacasLibre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Libre"
                        android:textColor="@color/generic_amarillo" />

                    <RadioButton
                        android:id="@+id/radioSonPlacasSitio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sitio"
                        android:textColor="@color/generic_amarillo" />

                    <RadioButton
                        android:id="@+id/radioSonPlacasRadio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Radio"
                        android:textColor="@color/generic_amarillo" />

                    <RadioButton
                        android:id="@+id/radioSonPlacasRosa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rosa"
                        android:textColor="@color/generic_amarillo" />
                </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/dialogo_datos_correctos_btnCancelar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:layout_weight=".5"
                android:background="@drawable/boton_redondo_focus"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Cancelar"
                android:textColor="@color/generic_amarillo" />

            <Button
                android:id="@+id/dialogo_datos_correctos_btnAceptar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="20dp"
                android:layout_weight=".5"
                android:background="@drawable/boton_redondo_focus"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Aceptar"
                android:textColor="@color/generic_amarillo" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>